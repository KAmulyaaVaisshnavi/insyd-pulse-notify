# Insyd Notification System - Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:8080

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/insyd-notifications

# For production deployment (MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/insyd-notifications

# API Configuration
API_BASE_URL=http://localhost:3001
API_VERSION=v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12

# Notification Settings
NOTIFICATION_CLEANUP_DAYS=30
MAX_NOTIFICATIONS_PER_USER=1000

# CORS Settings
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_CLEANUP_JOB=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true

# External Services (for future use)
EMAIL_SERVICE_API_KEY=
PUSH_NOTIFICATION_KEY=
ANALYTICS_KEY=